<Window x:Class="Snegorka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snegorka"
        mc:Ignorable="d"
        Title="Снегорка" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Name="TB_login" HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Opacity="0.75" Height="23" FontSize="15" Text="Введите логин" FontStyle="Italic" GotFocus="TB_login_GotFocus" LostFocus="TB_login_LostFocus" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <TextBox Name="TB_password" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Opacity="0.7" Height="23" FontSize="15" Text="Введите пароль" FontStyle="Italic" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" GotFocus="TB_password_GotFocus" LostFocus="TB_password_LostFocus"/>
        <Button x:Name="btnAuthorization" Content="Button" HorizontalAlignment="Center" Margin="0,268,0,0" VerticalAlignment="Top" Click="Button_Click" Height="28" Width="88"/>
        <!--<DataGrid x:Name="table"/>-->
    </Grid>
</Window>
